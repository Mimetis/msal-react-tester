{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "es2020",
    "target": "ES6",
    "lib": [
      "es6",
      "dom",
      "es2020",
      "es2020.promise"
    ],
    "types": [
      "node",
      "jest"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react-jsx",
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "strict": true,
    
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vite-sample",
    "create-react-app-sample",
    "rollup.config.js"
  ]
}